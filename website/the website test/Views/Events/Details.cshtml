@model the_website_test.Models.Events

@{
    ViewBag.Title = "Details";
}
<!--start main event-->

<div class="About-Event">
    <div class="container">
        <div class="row">
            <div class="Event-item">
                <div class="card mb-3" style="max-width: 1000px; ">
                    <div class="row no-gutters">

                        <div class="col-md-12">
                            <div class="card-body">
                                <h1 class="card-title">@Model.Title</h1>
                                <h4 class="sub-title"></h4>
                                <div role="separator" class="divider"></div>
                                <p class="card-text ">@Model.Body</p>
                                <div class="event-link">
                                    <a href="@Model.FBLink" class="social"><img src="~/images/Social/facebook-24.png"></a>
                                    <a href="@Model.TwitterLink" class="social"><img src="~/images/Social/twitter-32.png"></a>
                                </div>@Model.
                            </div>
                            <a href="/Events/Edit/@Model.ID" class="btn btn-default long">Edit</a>
                            <a href="/Events/Delete/@Model.ID" class="btn btn-default long">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

